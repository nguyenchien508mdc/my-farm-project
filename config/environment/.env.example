# config\environment\.env.example

# ========================= DJANGO =========================
# DEBUG: True chỉ dùng trong dev, production nên False
DEBUG=True

# Khóa bí mật Django (phải thay thế bằng giá trị thật khi deploy)
SECRET_KEY=replace-this-in-prod

# Danh sách host được phép truy cập, phân tách bằng dấu phẩy
ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# ========================= DATABASE =========================
# Cấu hình PostgreSQL
DB_NAME=your_db
DB_USER=your_user
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# ========================= EMAIL (tuỳ chọn) =========================
# Cấu hình gửi mail thực (bỏ comment nếu cần)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password

# Hoặc mặc định gửi mail ra console (cho dev)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ========================= CORS =========================
# Danh sách domain được phép gọi API (frontend)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
